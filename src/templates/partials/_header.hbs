<header class="header">


    <div class="header__logo">
        <a href="/{{@root.locale.code}}/index" class="header__link">Logo</a>
    </div>


    <!-- Menu Toggle -->
    <div class="menu-toggle" id="menu-toggle" role="button" aria-haspopup="true" aria-controls="menu">
        <div class="menu-toggle__icon menu-toggle__icon--show">
            {{> svg.icon-show }}
        </div>
        <div class="menu-toggle__icon menu-toggle__icon--hide">
            {{> svg.icon-hide }}
        </div>
    </div>


    <nav id="menu" class="menu">


        <ul class="menu__links-list">
            <li class="menu__list-item">
                <a href="/{{@root.locale.code}}/index" class="menu__link">{{@root.locale.index-nav-item}}</a>
            </li>
            <li class="menu__list-item">
                <a href="https://www.microblocks.fun/get-started" class="menu__link" target="_blank">{{@root.locale.get-started-nav-item}}</a>
            </li>
            <li class="menu__list-item">
                <a href="/{{@root.locale.code}}/educators" class="menu__link">{{@root.locale.educators-nav-item}}</a>
            </li>
            <li class="menu__list-item">
                <a href="https://www.microblocks.fun/" class="menu__link" target="_blank">MicroBlocks.fun</a>
            </li>
        </ul>


        <div class="menu__lang">
            <label for="site-language" class="visually-hidden">Site Language</label>
            <select id="site-language" class="locale" onchange="setLang(this.value)">
                {{#each locales}}
                <option>{{this}}</option>
                {{/each}}
            </select>
            <script>
                document.querySelector('select.locale').value =
                    document.documentElement.lang;
            </script>
        </div>


        <div class="menu__black">
            <a href="https://www.microblocks.fun/run" class="header__link" target="_blank">{{@root.locale.run-nav-item}}</a>
        </div>


    </nav>


</header>