<!DOCTYPE html>
<html lang="{{@root.locale.code}}">


	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>
			{{#if title}} 
				{{ title }} - MicroBlocks LEARN
			{{else}}
				MicroBlocks LEARN
			{{/if}}
		</title>

		<link rel="stylesheet" href="/main.css" type="text/css">
		<script src="/main.js"></script>

		{{! Make locales for this page available from the client side }}
		<script>
			var locale = {{{json locale}}},
				languages = {{{json languages}}};
		</script>

		<!-- SEO -->
	    <meta name="description" content="{{#if pageDescription}}{{ pageDescription }}{{else}}{{localize "og_description"}}{{/if}}">
		<link rel="canonical" href="{{#if pageUrl}}{{ pageUrl }}{{else}}https://wwww.microblocks.fun/{{/if}}">

		<!-- Social -->
		<meta property="og:title" content="
			{{#if title}} 
				{{ title }} - MicroBlocks LEARN
			{{else}}
				MicroBlocks LEARN
			{{/if}}
		">
		<meta property="og:description" content="{{#if pageDescription}}{{ pageDescription }}{{else}}{{localize "og_description"}}{{/if}}">
		<meta property="og:image" content="/assets/img/opengraph/microblocks.png">
		<meta property="og:image:alt" content="{{localize "og_image_alt"}}">
		<meta property="og:locale" content="{{ @root.locale.code }}">
		<meta property="og:type" content="website">
		<meta property="og:url" content="{{ pageUrl }}">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="@microblocksfun">
		<meta name="twitter:creator" content="@microblocksfun">

		<!-- Favicon -->	
		<link rel="apple-touch-icon" sizes="180x180" href="/assets/img/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicon/favicon-16x16.png">
		<link rel="manifest" href="/assets/img/favicon/site.webmanifest">
		<link rel="mask-icon" href="/assets/img/favicon/safari-pinned-tab.svg" color="#5bbad5">
		<link rel="shortcut icon" href="/assets/img/favicon/favicon.ico">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="msapplication-config" content="/assets/img/favicon/browserconfig.xml">
		<meta name="theme-color" content="#ffffff">

	</head>


	<body class="{{ pageClass }}">

		{{> _header }}

		<main class="main">
			{{#> main-content }}
			{{! Page contents will end up here }}
			{{/main-content }}
		</main>

		{{> _footer }}

		{{#if livereload}}
		<script>
			console.log('live reload enabled');
			var ws = new WebSocket(`ws://${location.hostname}:8080`);
			ws.onmessage = function (msg) {
				if (msg.data === 'reload') {
					location.reload();
				} else {
					console.log(msg.data);
				}
			};
		</script>
		{{/if}}

	</body>


</html>
