{{#> layouts._html-shell
    pageClass="v_activity"
    pageUrl="https://learn.microblocks.fun/"
    pageDescription="MicroBlocks is a live blocks programming language for physical computing."
}}

{{#*inline "main-content"}}


<!-- Header -->
<header class="v_activity__hero c_hero-yellow">
    <div class="row row--center">

        <div class="col col-px col-12 md-col-6 lg-col-3 xl-col-3">
            <div class="c_hero-yellow__picture-wrapper">
                <div class="c_hero-yellow__picture">
                    <img src="thumbnail.png" alt="{{title}}">
                </div>
            </div>
        </div>

        <div class="col col-px col-12">
            <div class="c_hero-yellow__title-wrapper">
                <h1 class="c_hero-yellow__title">{{title}}</h1>
                <address class="c_hero-yellow__author">{{localize "author" author}}</address>
            </div>
        </div>        

        <div class="col col-px col-12">
            <div class="c_hero-yellow__specs">

                <div class="c_hero-yellow__boards">
                    <h3 class="c_hero-yellow__boards-title c_title-small">
                        {{> svg.icon-board-20x20 }}
                        Boards:
                    </h3>
                    <div class="c_hero-yellow__boards-list">
                        {{#each boards}}
                        <span class="c_comma-separated">{{localize this}}</span>
                        {{/each}}
                    </div>
                </div>

                <div class="c_hero-yellow__components">
                    <h3 class="c_hero-yellow__components-title c_title-small">
                        {{> svg.icon-component-20x20 }}
                        Components:
                    </h3>
                    <div class="c_hero-yellow__components-list">
                        {{#if components}}
                            {{#each components}}
                            <span class="c_comma-separated">{{localize this}}</span>
                            {{/each}}
                        {{else}}
                            <span>{{localize 'no-components'}}</span>
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>        

    </div>
</header>


<div class="contents">
    <div class="row">


        <!-- Sidebar Contents -->
        <div class="col col-px col-12 lg-col-3 xl-col-3">
            {{#if (or has-guide has-card)}}
            <aside class="v_activity__side-block">
                <h3 class="v_activity__side-title">
                    Resources
                </h3>
                <div>
                    
                    {{#if has-card}}
                    <a class="c_button" href="./activity-card.pdf">
                        {{> svg.icon-document-20x20 }}
                        Activity Card
                    </a>
                    {{/if}}

                    {{#if has-guide}}
                    <a class="c_button" href="./guide">
                        {{> svg.icon-student-16x16 }}
                        Teacher's Guide
                    </a>
                    {{/if}}

                    {{!-- {{ #if has-guide}}
                    <a class="c_button" href="./guide">
                        {{> svg.icon-slides-20x20 }}
                        Slides
                    </a>
                    {{ /if}} --}}
                    
                    {{!-- {{ #if has-guide}}
                    <a class="c_button" href="./guide">
                        {{> svg.icon-scripts-20x20 }}
                        Scripts
                    </a>
                    {{ /if}} --}}

                </div>
            </aside>
            {{/if}}

            <aside class="v_activity__side-block">
                <h3 class="v_activity__side-title">
                    Activity Details
                </h3>
                <div class="v_activity__side-box v_activity__side-box--details">
                    
                    <div class="v_activity__details-group">
                        <h4 class="v_activity__details-group-title c_title-small c-title-small--icon-level">
                            Level
                        </h4>
                        <div class="v_activity__details-group-content">
                            {{localize (join "lvl_" level)}}
                        </div>
                    </div>

                    <div class="v_activity__details-group">
                        <h4 class="v_activity__details-group-title c_title-small c-title-small--icon-time">
                            Estimated Time
                        </h4>
                        <div class="v_activity__details-group-content">
                            {{localize "duration" time.[0] time.[1]}}
                        </div>
                    </div>

                    <div class="v_activity__details-group">
                        <h4 class="v_activity__details-group-title c_title-small c-title-small--icon-time">
                            Topics
                        </h4>
                        <div class="v_activity__details-group-content">
                            {{#each topics}}
                            <span class="comma-separated">{{localize this}}</span>
                            {{/each}}
                        </div>
                    </div>

                    <div class="v_activity__details-group">
                        <h4 class="v_activity__details-group-title c_title-small c-title-small--icon-time">
                            Available Languages
                        </h4>
                        <ul class="v_activity__details-group-content">
                            {{#each translations}}
                            <li>
                                <a href="../{{this.slug}}">{{language-name this.langCode}}</a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>

                </div>
            </aside>

            <aside class="v_activity__side-block v_activity__side-block--printable">
                <h3 class="v_activity__side-title">
                    Printable Version
                </h3>
                <div>
                    <p>You can load a printer friendly version of this page for printing or save it as a PDF file.</p>
                    <a class="c_button-small" href="#">Printable Version</a>
                </div>
            </aside>

        </div><!-- Sidebar Contents -->


        <!-- Activity Text -->
        <div class="col col-px col-12 lg-offset-1 lg-col-8 xl-offset-1 xl-col-8">
            <article class="v_activity__contents wysiwyg">

                <div class="wrapper-nice-guy" style="margin-block: 1rem; width: min-content;">
                    <img src="https://i.imgur.com/btpq63F.jpg" />
                    <div class="label">Lorem ipsum dolor sit amet fringilla vigo idipiscit morbius set gingulap tin summent.</div>
                </div>

                {{! insert the compiled markdown for this particular activity }}
                {{#markdown markdown}}{{/markdown}}

            </article>
        </div><!-- Activity Text -->


    </div>
    <script>processImagesForCode();</script>
</div>

{{/inline}}

{{/layouts._html-shell }}
